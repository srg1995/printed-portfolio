---
import Section from "../Section.astro";
import { education } from "@cv";
---

<Section title="Estudios">
  <ul class="flex flex-col gap-4">
    {
      education.map(
        ({ courses, area, studyType, startDate, endDate, score }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear = !!endDate
            ? new Date(endDate).getFullYear()
            : "Actual";
          const years =
            startYear === endYear
              ? `${startYear}`
              : `${startYear} - ${endYear}`;
          return (
            <li>
              <article class="">
                <header class="flex justify-between align-center items-baseline">
                  <div>
                    <h3 class="text-xl text-gray-900 font-bold border-b-2 border-gray-400 mt-4 mb-2">
                      {studyType}
                    </h3>
                    <h4 class="text-md text-gray-700 font-semibold">{area}</h4>
                  </div>
                  <time class="text-md">{years}</time>
                </header>
                <footer class="">
                  <div class="flex flex-row gap-2">
                    {courses.map((course, index) => {
                      return (
                        <span>
                          {course}
                          {courses.length - 1 === index ? "" : ` / `}
                        </span>
                      );
                    })}
                  </div>
                </footer>
              </article>
            </li>
          );
        },
      )
    }
  </ul>
</Section>
